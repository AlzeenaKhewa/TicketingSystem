:root {
    --chat-bg: #fff;
    --panel-bg: #f8f9fa;
    --border-color: #e9ecef;
    --primary-blue: #007bff;
    --bubble-sent: linear-gradient(135deg, #007bff, #0056b3);
    --bubble-received: #f1f0f0;
    --text-color-light: #fff;
    --text-color-dark: #333;
    --text-muted-color: #888;
    --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    background-color: #eef2f5;
}

.chat-wrapper {
    display: flex;
    height: 90vh;
    max-width: 1200px;
    margin: 2vh auto;
    background-color: var(--chat-bg);
    border-radius: 12px;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    font-family: var(--font-family);
    overflow: hidden;
}

/* User List Panel (Left Side) */
.user-list-panel {
    width: 280px;
    background-color: var(--panel-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
}

.panel-header {
    padding: 1rem;
    font-weight: 600;
    color: var(--text-color-dark);
    border-bottom: 1px solid var(--border-color);
}

#user-list .list-group-item {
    cursor: pointer;
    border: none;
    background: transparent;
    transition: background-color 0.2s;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

#user-list .list-group-item:hover {
    background-color: #e2e6ea;
}

#user-list .list-group-item.active {
    background-color: var(--primary-blue);
    color: var(--text-color-light);
    font-weight: bold;
}
#user-list .list-group-item.active i { color: var(--text-color-light) !important; }

.online-status-dot { font-size: 0.7rem; }
.online-status-dot.online { color: #28a745; }
.online-status-dot.offline { color: #6c757d; }

/* Main Chat Container */
.chat-container {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.chat-header {
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
}

.chat-header h5 { margin: 0; font-weight: 600; }
.chat-header p { margin: 0; color: var(--text-muted-color); font-size: 0.9rem; }

/* Message List */
.message-list {
    flex-grow: 1;
    overflow-y: auto;
    padding: 1.5rem;
}

.date-separator { text-align: center; margin: 1.5rem 0; color: var(--text-muted-color); font-size: 0.8rem; }
.message-row { display: flex; flex-direction: column; margin-bottom: 1rem; max-width: 75%; }
.message-content { display: flex; flex-direction: column; }
.message-sender { font-size: 0.8rem; font-weight: 600; margin-bottom: 4px; color: #555; }
.message-bubble { padding: 0.8rem 1.2rem; border-radius: 18px; line-height: 1.5; font-size: 0.95rem; word-break: break-word; }
.message-timestamp { font-size: 0.75rem; color: var(--text-muted-color); margin-top: 5px; }

/* Message Alignment */
.other-user { align-self: flex-start; }
.other-user .message-sender { align-self: flex-start; }
.other-user .message-timestamp { align-self: flex-start; }
.other-user .message-bubble { background-color: var(--bubble-received); color: var(--text-color-dark); border-top-left-radius: 4px; }

.current-user { align-self: flex-end; }
.current-user .message-content { align-items: flex-end; }
.current-user .message-timestamp { align-self: flex-end; }
.current-user .message-bubble { background: var(--bubble-sent); color: var(--text-color-light); border-top-right-radius: 4px; }

/* Initially hide all messages; JS will show the correct ones */
.message-row { display: none; }

/* Typing Indicator & Input Form */
.typing-indicator { height: 20px; padding: 0 1.5rem; color: var(--text-muted-color); font-style: italic; font-size: 0.9rem; transition: opacity 0.3s; }
.message-input-form { display: flex; align-items: center; padding: 0.75rem 1.5rem; border-top: 1px solid var(--border-color); background-color: var(--panel-bg); }
#message-input { flex-grow: 1; border: 1px solid var(--border-color); background-color: var(--chat-bg); padding: 0.75rem; font-size: 1rem; border-radius: 20px; }
#message-input:focus { outline: none; border-color: var(--primary-blue); box-shadow: 0 0 0 2px rgba(0,123,255,.25); }
#send-button { border-radius: 50%; width: 48px; height: 48px; margin-left: 10px; flex-shrink: 0; }